<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/l0"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Display3"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:text="Дата"
                    android:id="@+id/t_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/l1"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/l0">
                <View
                    style="@style/Divider"
                    android:id="@+id/sep0"/>
                <TextView
                    android:id="@+id/t1"
                    style="@style/AppTheme.TextStyle"
                    android:gravity="center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="8:00-9:30" />
                <TextView
                    android:id="@+id/group1"
                    style="@style/AppTheme.TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/t1"
                    android:text="3 курс 31 КПМ "
                    android:layout_toEndOf="@+id/t1" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/l2"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/l1">
                <View
                    style="@style/Divider"
                    android:id="@+id/sep1"/>
                <TextView
                    android:id="@+id/t2"
                    style="@style/AppTheme.TextStyle"
                    android:gravity="center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="8:00-9:30" />
                <TextView
                    android:id="@+id/group2"
                    style="@style/AppTheme.TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/t2"
                    android:text="3 курс 31 КПМ "
                    android:layout_toEndOf="@+id/t2" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/l3"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/l2">
                <View
                    style="@style/Divider"
                    android:id="@+id/sep2"/>
                <TextView
                    android:id="@+id/t3"
                    style="@style/AppTheme.TextStyle"
                    android:gravity="center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="8:00-9:30" />
                <TextView
                    android:id="@+id/group3"
                    style="@style/AppTheme.TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/t3"
                    android:text="3 курс 31 КПМ "
                    android:layout_toEndOf="@+id/t3" />
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/l4"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/l3">
                <View
                    style="@style/Divider"
                    android:id="@+id/sep3"/>
                <TextView
                    android:id="@+id/t4"
                    style="@style/AppTheme.TextStyle"
                    android:gravity="center_vertical"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:text="8:00-9:30" />
                <TextView
                    android:id="@+id/group4"
                    style="@style/AppTheme.TextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/t4"
                    android:text="3 курс 31 КПМ "
                    android:layout_toEndOf="@+id/t4" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>