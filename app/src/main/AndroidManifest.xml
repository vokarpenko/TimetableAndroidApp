<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kubsu.timetable">

    <permission
        android:name="kubsu.timetable.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="kubsu.timetable.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Student.StudentActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Start.StartActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ChangeTeacherActivity"
            android:screenOrientation="locked" />
        <activity
            android:name=".News.DetailNew.DetailNewsActivity"
            android:screenOrientation="locked" />
        <activity android:name=".Registration.RegistrationActivity" />
        <activity
            android:name=".Login.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity android:name=".AfterRegister.AfterRegisterActivity" />
        <activity android:name=".LessonNotes.NotesActivity"></activity>
    </application>

</manifest>